<?xml version="1.0" encoding="UTF-8"?>
<addons>
<addon id="repository.psmc-20" name="PSMC-20 Repository" version="1.0.1" provider-name="The Papaw">
    <requires>
        <import addon="xbmc.addon" version="12.0.0"/>
    </requires>
    <extension point="xbmc.addon.repository" name="PSMC Repository">
		<dir>
			<info compressed="false">https://raw.githubusercontent.com/thepapaw/psmc-20/master/_zips/addons.xml</info>
			<checksum>https://raw.githubusercontent.com/thepapaw/psmc-20/master/_zips/addons.xml.md5</checksum>
			<datadir zip="true">https://raw.githubusercontent.com/thepapaw/psmc-20/master/_zips/</datadir>
			<hashes>false</hashes>
		</dir>
    </extension>
    <extension point="xbmc.addon.metadata">
        <summary>The Official Repo for PSMC-20 (Papaw's Son Media Center)</summary>
        <description>This is the "Official" repository for PSMC-20 (Papaw's Son Media Center). PSMC-20 is a fork of Kodi.[CR]- [COLOR orange]Please consider supporting our efforts with a [B][COLOR deepskyblue]cup of coffee[/COLOR][/B] by scanning the QR code![/COLOR]</description>
        <platform>all</platform>
		<license>CC BY-NC-SA 4.0</license>
		<forum></forum>
		<website>https://github.com/ThePapaw/psmc-20</website>
		<source>https://github.com/ThePapaw/psmc-20</source>
		<video_guide></video_guide>
        <genre>movies,tv,streaming,gaming,usa</genre>
		<assets>
			<icon>icon.png</icon>
			<fanart>fanart.jpg</fanart>
            <screenshot>resources/screenshot-01.jpg</screenshot>
			<screenshot>resources/bmc.jpg</screenshot>
		</assets>
		<news>[COLOR yellow]Initial Release[/COLOR]</news>
    </extension>
</addon>

<addon id="script.psgc.launcher" name="PSGC Launcher" version="1.0.0" provider-name="The Papaw">
    <requires>
        <import addon="xbmc.python" version="3.0.0"/>
    </requires>
    <extension point="xbmc.python.script" library="default.py">
        <provides>game executable</provides>
    </extension>
    <extension point="xbmc.addon.metadata">
        <summary lang="en_GB">Launches LaunchBox in Big Box mode from within PSMC.</summary>
        <disclaimer lang="en_GB">For bugs, requests or general questions visit the PSMC-20 Repository on GitHub.</disclaimer>
        <description lang="en_GB">Launches LaunchBox in Big Box mode from within PSMC - It will close or minimize PSMC, launch LaunchBox in Big Box mode and when Big Box is exited PSMC will restart or maximize, with the option to run programs pre/post LaunchBox. It works with PSMC or Kodi on Windows platform only.</description>
        <news>Inital Release.</news>
        <platform>windx</platform>
        <language>en</language>
        <license>CC BY-NC-SA 4.0</license>
        <forum></forum>
        <website>https://github.com/ThePapaw/psmc-20</website>
        <source>https://github.com/ThePapaw/psmc-20</source>
        <email></email>
        <assets>
            <icon>resources/icon.png</icon>
            <fanart>resources/fanart.jpg</fanart>
            <screenshot>resources/screenshot-01.jpg</screenshot>
            <screenshot>resources/screenshot-02.jpg</screenshot>
        </assets>
    </extension>
</addon>
</addons>
